{% extends "FOSUserBundle::layout.html.twig" %}

{% block body -%}
    <h1>Chapter list</h1>
    
  
    
    

    <table class="records_list">
        <thead>
            <tr>
                <th>Idchapter</th>
                <th>Chaptertitle</th>
                <th>Chapternumber</th>
                <th>Idcourse</th>
                <th>Chaptercontent</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('chapter_show', { 'id': entity.idChapter }) }}">{{ entity.idChapter }}</a></td>
                <td>{{ entity.chaptertitle }}</td>
                <td>{{ entity.chapternumber }}</td>
                <td>{{ entity.idCourse }}</td>
                <td>{{ entity.chaptercontent }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('chapter_show', { 'id': entity.idChapter }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('chapter_edit', { 'id': entity.idChapter }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('chapter_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
