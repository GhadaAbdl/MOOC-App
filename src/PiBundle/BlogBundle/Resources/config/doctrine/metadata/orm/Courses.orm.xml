<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Courses" table="courses">
    <id name="idCourse" type="integer" column="id_course">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="content" type="text" column="content" nullable="false"/>
    <field name="description" type="string" column="description" length="10000" nullable="false"/>
    <field name="objectives" type="string" column="objectives" length="10000" nullable="false"/>
    <field name="trainingDuration" type="integer" column="training_duration" nullable="false"/>
    <field name="validation" type="integer" column="validation" nullable="true"/>
  </entity>
</doctrine-mapping>
